<UserControl x:Class="TRAINBattle.UCJeux"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRAINBattle"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="720">
            <Image x:Name="imgBG" Source="/img/terrain/terrain1.png" Stretch="Fill" />
            <Canvas x:Name="canvasJeux">
            </Canvas>
            <TextBlock x:Name="blockInfo" Text="Info" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" FontFamily="Arial Black" TextAlignment="Center"/>
        </Grid>
    </Viewbox>
</UserControl>
