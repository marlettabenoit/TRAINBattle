<UserControl x:Class="TRAINBattle.UCChoixPerso"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRAINBattle"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Rectangle Fill="White" />
        <Button x:Name="butRetour" Content="Retour" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Image Tag="0" MouseLeftButtonDown="Perso_Click" MouseRightButtonDown="Perso_Click" Source="/img/train1/profil.png" Height="100" Width="100" Margin="0,200,375,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image Tag="1" MouseLeftButtonDown="Perso_Click" MouseRightButtonDown="Perso_Click" Source="/img/train2/profil.png" Height="100" Width="100" Margin="0,200,125,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image Tag="2" MouseLeftButtonDown="Perso_Click" MouseRightButtonDown="Perso_Click" Source="/img/train3/profil.png" Height="100" Width="100" Margin="125,200,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image Tag="3" MouseLeftButtonDown="Perso_Click" MouseRightButtonDown="Perso_Click" Source="/img/train4/profil.png" Height="100" Width="100" Margin="375,200,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <Grid Height="250" VerticalAlignment="Bottom">
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0.05"/>
                        <GradientStop Color="#FF909090" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Label Content="3 Rounds" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100" FontSize="18"></Label>
        </Grid>

        <Grid Width="450" Height="350" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FF909090" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Image x:Name="imgP1" Source="/img/train1/profil.png" Width="200" Height="200" Margin="0,0,0,50"/>
            <Label x:Name="lblNomP1" Content="George" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,200,0,0" FontSize="24"/>
            <Label Content="Player 1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,275,0,0" FontSize="18"/>
        </Grid>

        <Grid Width="450" Height="350" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FF909090" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Image x:Name="imgP2" Source="/img/train2/profil.png" Width="200" Height="200" Margin="0,0,0,50"/>
            <Label x:Name="lblNomP2" Content="Christof" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,200,0,0" FontSize="24"/>
            <Label Content="Player 2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,275,0,0" FontSize="18"/>
        </Grid>



        <Button x:Name="butStart" Content="START" FontFamily="Arial Black" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,240"/>

    </Grid>
    

</UserControl>
