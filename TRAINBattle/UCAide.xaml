<UserControl x:Class="TRAINBattle.UCAide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRAINBattle"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Rectangle Fill="White" />
        <Button x:Name="butRetour" Content="Retour" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Label x:Name="labAide" Content="Aide" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Width="600" Height="46" Background="#FFD8D7D7" FontSize="22"/>

        <StackPanel Margin="100,100,100,0">
            <TextBlock Margin="0,32,0,0" VerticalAlignment="Top" Background="#FFD8D7D7" FontSize="22">
                Mode de jeux :<LineBreak />
                Solo : Pour jouer seul face à un bot<LineBreak />
                Versus : pour s'amuser entre amis
            </TextBlock>

            <TextBlock Margin="0,32,0,0" VerticalAlignment="Top" Background="#FFD8D7D7" FontSize="22">
                Choix du perso :<LineBreak />
                Allez dans parametres, puis au choix les parametre des touches du player 1 ou du player 2 en fonction<LineBreak/>des touches que vous voulez connaitre.<LineBreak/>
                Notez qu'au même endroit vous pourez changer vos touches
            </TextBlock>

            <TextBlock Margin="0,32,0,0" VerticalAlignment="Top" Background="#FFD8D7D7" FontSize="22">
                Choix du perso :<LineBreak />
                Player 1 : Click gauche sur l'image du perso voulu<LineBreak />
                Player 2 : Click droit sur l'image du perso voulu
            </TextBlock>

            <TextBlock Margin="0,32,0,0" VerticalAlignment="Top" Background="#FFD8D7D7" FontSize="22">
                Aide :<LineBreak />
                Vous y etes deja, donc pas besoin de vous indiquer ou aller ;)
            </TextBlock>

        </StackPanel>
        
    </Grid>
</UserControl>
