<UserControl x:Class="TRAINBattle.UCDemarage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRAINBattle"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Rectangle >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3E0E0E"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel>
            <Grid Margin="400,50,400,0">
                <Rectangle >
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFEC1919" Offset="0.193"/>
                            <GradientStop Color="#003E0E0E" Offset="1"/>
                            <GradientStop Color="#FCEA1818" Offset="0.66"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Label Content="T.R.A.I.N. battle" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="32" Margin="0,20,0,20"/>
            </Grid>
            
            <Image Width="300" Height="150" Margin="0,50,0,0" />
            
            <Grid Margin="300,50,300,0">
                <Button x:Name="butSolo" Content="Solo" FontSize="24"></Button>
            </Grid>

            <Grid Margin="300,50,300,0">
                <Button x:Name="butVersus" Content="Versus" FontSize="24"></Button>
            </Grid>

            <Grid Margin="300,50,300,0">
                <Button x:Name="butParametres" Content="Parametres" FontSize="24"></Button>
            </Grid>

            <Grid Margin="300,50,300,0">
                <Button x:Name="butAide" Content="Aide" FontSize="24"></Button>
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
