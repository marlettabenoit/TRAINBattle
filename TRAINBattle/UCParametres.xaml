<UserControl x:Class="TRAINBattle.UCParametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRAINBattle"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Rectangle Fill="White" />
        <Button x:Name="butRetour" Content="Retour" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Label x:Name="labAide" Content="Aide" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Width="600" Height="46" Background="#FFD8D7D7" FontSize="22"/>

        <Slider x:Name="sliderSond" HorizontalAlignment="Left" Margin="38,175,0,0" VerticalAlignment="Top" Width="345" Minimum="0" Maximum="100"/>
        <Label x:Name="labSond" Content="Sonds" HorizontalAlignment="Left" Margin="38,145,0,0" VerticalAlignment="Top" Height="30" Width="75" FontSize="18"/>

        <Slider x:Name="sliderMusique" HorizontalAlignment="Left" Margin="38,275,0,0" VerticalAlignment="Top" Width="345" Minimum="0" Maximum="100"/>
        <Label x:Name="labMusique" Content="Musique" HorizontalAlignment="Left" Margin="38,245,0,0" VerticalAlignment="Top" Height="30" Width="86" FontSize="18"/>

        <Label x:Name="labTouche" Content="Touche" HorizontalAlignment="Left" Margin="38,345,0,0" VerticalAlignment="Top" Height="30" Width="86" FontSize="18"/>
        <Button x:Name="butPlayer1" Content="Player1" HorizontalAlignment="Left" Margin="41,380,0,0" VerticalAlignment="Top" Height="48" Width="109" FontSize="22"/>
        <Button x:Name="butPlayer2" Content="Player2" HorizontalAlignment="Left" Margin="194,380,0,0" VerticalAlignment="Top" Height="48" Width="109" FontSize="22"/>

        <Button x:Name="butSauvegarde" Content="Sauvegarde" HorizontalAlignment="Right" Margin="0,0,50,40" VerticalAlignment="Bottom" Height="100" Width="254" FontSize="45" Click="butSauvegarde_Click"/>
        <Button x:Name="butReset" Content="Reset" HorizontalAlignment="Right" Margin="0,0,350,40" VerticalAlignment="Bottom" Width="254" Height="100" FontSize="48" Click="butReset_Click"/>
    </Grid>

</UserControl>
